@page "/"
@model ureche_iudita_paula_proiect.Pages.Banci.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Banca[0].Nume_banca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banca[0].client_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Banca[0].serviciu_ID)
            </th>
            <th></th>
        </tr>
    </thead>
